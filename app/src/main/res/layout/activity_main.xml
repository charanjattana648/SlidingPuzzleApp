<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/relativeLayoutMargin">

        <TextView
            android:id="@+id/movesSoFar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movesSoFar"
            android:textSize="@dimen/textViewSize"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layout_one">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/imageViewMargin"
            android:contentDescription="@string/imageContentDes" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/img2"
            android:layout_margin="@dimen/imageViewMargin"
            android:contentDescription="@string/imageContentDes"
            />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/imageViewMargin"
            android:contentDescription="@string/imageContentDes"
            android:id="@+id/img3"
            />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/imageViewMargin"
            android:contentDescription="@string/imageContentDes"
            android:id="@+id/img4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layout_two">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/img5"
            android:layout_margin="@dimen/imageViewMargin"
            android:contentDescription="@string/imageContentDes" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/img6"
            android:layout_margin="@dimen/imageViewMargin"
            android:contentDescription="@string/imageContentDes" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/imageViewMargin"
            android:contentDescription="@string/imageContentDes"
            android:id="@+id/img7" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/imageViewMargin"
            android:contentDescription="@string/imageContentDes"
            android:id="@+id/img8" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layout_three">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/img9"
            android:layout_margin="@dimen/imageViewMargin"
            android:contentDescription="@string/imageContentDes" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/img10"
            android:layout_margin="@dimen/imageViewMargin"
            android:contentDescription="@string/imageContentDes" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/imageViewMargin"
            android:contentDescription="@string/imageContentDes"
            android:id="@+id/img11" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/imageViewMargin"
            android:contentDescription="@string/imageContentDes"
            android:id="@+id/img12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layout_four">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/img13"
            android:layout_margin="@dimen/imageViewMargin"
            android:contentDescription="@string/imageContentDes" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/img14"
            android:layout_margin="@dimen/imageViewMargin"
            android:contentDescription="@string/imageContentDes" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/imageViewMargin"
            android:contentDescription="@string/imageContentDes"
            android:id="@+id/img15" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/imageViewMargin"
            android:contentDescription="@string/imageContentDes"
            android:id="@+id/img16" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/layoutMarginTop"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/newPuzzle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newPuzzle"
            android:textSize="@dimen/btnTextSize"
            android:textStyle="bold" />

        <Button
            android:id="@+id/solvePuzzle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/solvePuzzle"
            android:textSize="@dimen/btnTextSize"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/relativeLayoutMargin">

        <TextView
            android:id="@+id/outputResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text=""
            android:textSize="@dimen/textViewSize"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>